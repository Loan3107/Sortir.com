<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8">
        <title>
            Sortir.com | Connexion
        </title>
        <link href="https://fonts.googleapis.com/css2?family=Sansita+Swashed&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/connexion.css') }}">
    </head>

    <body>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                {% if message == 'error' %}
                    {% set label = 'danger' %}
                {% endif %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="header w-100 pt-5 pb-4" role="banner">
            <h3 class="connexion-title">Sortir.com</h3>
        </div>

        <div class="container">
            <div class="auth-form">
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="connexion_pseudo" class="font-weight-bold">Pseudo</label>
                        <input type="text" value="{{ lastUsername }}" name="_username" id="connexion_pseudo" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="connexion_password" class="font-weight-bold">Mot de passe</label>
                        <input type="password" name="_password" id="connexion_password" class="form-control" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button type="submit" class="btn btn-success w-100 mt-2 font-weight-bold">Se connecter</button>

                </form>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

    </body>
</html>